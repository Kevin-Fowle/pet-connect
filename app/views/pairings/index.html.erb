<div class="container">
<h1>inbox</h1>
  <% if !!@pairings and @pairings.try(:length) > 0 %>
    <table>
      <thead>
        <tr>
          <th>conversation</th>
          <th>last message</th>
          <th>messages</th>
          <th colspan="3"></th>
        </tr>
      </thead>

      <% if !!@pairings and @pairings.length > 0 %>
        <tbody>
          <% @pairings.each do |pairing| %>
            <% if !!pairing.messages && pairing.messages.length > 0 %>
              <tr>
                <td><%= link_to "#{pairing.pair(current_user).name}", pairing_messages_path(pairing) %></td>
                <td><%= pairing.messages.last.created_at %></td>
                <td><%= pairing.messages.count %></td>
              </tr>
            <% end %>
          <% end %>
        </tbody>
      <% end %>
    </table>
  <% else %>
    <p>Your inbox is empty</p>
  <% end %>
</div>

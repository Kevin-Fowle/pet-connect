<%= form_for [:pairing, @message] do |f| %>

  <p>
    <%= f.label :subject %>
    <%= f.text_field :subject %>
  </p>
  <p>
    <%= f.label :body %>
    <%= f.text_area :body %>
  </p>
  <p>
    <%= f.submit %>
  </p>

<% end %>

<br>

<% if current_user.behalf_of == @message.author %>
  <%= link_to 'Edit', edit_pairing_message_path(@pairing, @message) %> |
  <%= link_to 'Back', pairing_messages_path(@pairing) %>
<% end %>
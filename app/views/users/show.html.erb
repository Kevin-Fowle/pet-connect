<h2><%= @user.full_name %></h2>
<div class="user-info">
 <%= current_user.first_name %>
</div>

<div class="pet-list">
  <ul class="collapsible" data-collapsible="accordion">
    <% @pets.each do |pet| %>
    <li>
      <div class="collapsible-header clear">
        <h3 class="left">
          <%= link_to pet.name, user_pet_path(@user, pet), class: "pet-header" %>
        </h3>
          <%= image_tag pet.avatar.url(:thumb), class: "right" %>

      </div>
      <div class="collapsible-body">
        <p class="pet-detail">
          <%= pet.species %>
        </p>
        <p class="pet-detail">
          <%= pet.breed %>
        </p>
        <p class="pet-detail">
          <%= pet.description %>
        </p>
      </div>
    </li>
    <% end %>
  </ul>
  <%= link_to 'add a pet', new_user_pet_path(@user) %>
</div>
<div>
  <!-- new_event link -->
</div>
<div>
  <p>confirmed events</p>
  <ul>
    <% current_user.confirmed_events.each do |event| %>
    <li><%= event.start_time %></li>
    <% end %>
  </ul>
</div>
<div>
  <p>offered events</p>
    <ul>
    <% current_user.offered_events.each do |event| %>
    <li><%= event.start_time %></li>
    <% end %>
  </ul>
</div>
<div class= "add-hospital">
  <%= form_tag(organizations_path , :method => "post", class: "add-hospital-form", id: "search-bar") do %>
    <%= text_field_tag :name%>
    <%= submit_tag "Search", id: "submit_button" %>
  <% end %>
</div>

<div id="search_results">
</div>

<div class="user-parings">
  <% if @user.try(:pairings).length > 0 %>
    <h3>preferred hospitals</h3>
  <% end %>

  <% @organizations.each do |org| %>
    <p><%= link_to 'org.name', org %></p>
  <% end %>
</div>

<%= form_for [@user, @event] do |f| %>
  <p>
    <%= f.label :date %>
    <%= date_select :event, :date %>
  </p>
  <p>
    <%= f.label :start_time %>
    <%= time_select :event, :start_time, ampm: true, minute_step: 15 %>
  </p>
  <p>
    <%= f.label :end_time %>
    <%= time_select :event, :end_time, ampm: true, minute_step: 15  %>
  </p>
  <p>
    <%= f.submit nil, :class => "waves-effect waves-light btn modal-trigger" %>
  </p>
<% end %>

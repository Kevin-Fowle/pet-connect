<%= form_for :rating, url: {action: "create"}, html: {id: "rating-form"} do |f| %>
  <% if @organization %>
    <input type="hidden" name="organization_id" value="<%= @organization.id %>">
  <% else %>
    <input type="hidden" name="pet_id" value="">
  <% end %>
  <%= f.label :stars %>
  <%= f.select :stars, options_for_select( [['5', 1], ['4', 2], ['3', 3], ['2', 4], ['1', 5]]) %>


<% end %>
